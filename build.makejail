OPTION start
OPTION overwrite=force
OPTION osversion=focal
OPTION type=linux+debootstrap
OPTION linuxfs

INCLUDE options/volumes.makejail
INCLUDE options/devices.makejail

CMD echo "deb http://archive.ubuntu.com/ubuntu/ focal main restricted universe multiverse" > /etc/apt/sources.list
CMD echo "deb http://archive.ubuntu.com/ubuntu/ focal-updates main restricted universe multiverse" >> /etc/apt/sources.list
CMD echo "deb http://archive.ubuntu.com/ubuntu/ focal-security main restricted universe multiverse" >> /etc/apt/sources.list

PKG --update
PKG apt-transport-https curl gnupg pulseaudio

CMD curl -fsSLo /usr/share/keyrings/brave-browser-archive-keyring.gpg \
	https://brave-browser-apt-release.s3.brave.com/brave-browser-archive-keyring.gpg

CMD echo "deb [signed-by=/usr/share/keyrings/brave-browser-archive-keyring.gpg] https://brave-browser-apt-release.s3.brave.com/ stable main" |\
	tee /etc/apt/sources.list.d/brave-browser-release.list

PKG --update
PKG brave-browser

PKG --clean
CMD rm -rf /var/lib/apt/lists/*
